@model IEnumerable<E_Administration.Models.Contact>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div style="display: flex; justify-content: space-between;">
    <!-- Left Section: Contact List -->
    <div style="width: 48%;">
        <h2 style="font-size: 2em; color: #FF5733; text-align: left; font-weight: bold; text-decoration: underline;">Contact Us</h2>
        @foreach (var item in Model)
        {
            <div style="margin-bottom: 20px;">
                <p><strong>Email:</strong> <a href="mailto:E-Computer-support@gmail.com">@Html.DisplayFor(modelItem => item.Email)</a></p>
                <p><strong>Phone:</strong> <a href="tel:+1234567890">@Html.DisplayFor(modelItem => item.Phone)</a></p>
                <p><strong>Description:</strong> @Html.DisplayFor(modelItem => item.Description)</p>
            </div>
        }
    </div>

    <!-- Right Section: Google Map -->
    <div style="width: 48%; text-align: center;">
        <h2 style="font-size: 2em; color: #FF5733; text-align: left; font-weight: bold; text-decoration: underline;">Find Us Here</h2>
        <div style="border: 1px solid #ccc; padding: 10px;">
            <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3919.2663884920185!2d106.67963457480508!3d10.790897789358738!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x31752fcdf5e6b00b%3A0xed1c6762515e1113!2sFPT%20Aptech%20-%20Game%20Development%20with%20Unity!5e0!3m2!1svi!2s!4v1733574056344!5m2!1svi!2s" width="600" height="450" style="border:0;" allowfullscreen="" loading="lazy" referrerpolicy="no-referrer-when-downgrade"
                    width="100%" height="300" style="border:0;" allowfullscreen="" loading="lazy"></iframe>
        </div>
    </div>
</div>

