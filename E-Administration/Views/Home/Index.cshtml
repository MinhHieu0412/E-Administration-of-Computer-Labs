@model E_Administration.Models.HomeViewModel
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<main id="main-content">

    <!-- Banner Section -->
    <section id="banner-section">

        <!-- Owl Carousel Slider -->
        <div class="owl-carousel owl-theme">
            <div class="item">
                <img src="~/img/banner-1.jpg" alt="banner1">
            </div>
            <div class="item">
                <img src="~/img/banner-2.jpg" alt="banner2">
            </div>
            <div class="item">
                <img src="~/img/banner-3.jpg" alt="banner3">
            </div>
        </div>
        <!-- !Owl Carousel Slider -->

        <div class="slider-caption">
            <div class="container">
                <div class="caption-icons">
                    <a asp-controller="Home" asp-action="DisplayLab" class="bg-orange icons-item">
                        <i class="fas fa-desktop"></i>
                        <br>Labs
                    </a>

                    <a asp-controller="ELearning" asp-action="ViewElearning" class="bg-yellow icons-item">
                        <i class="fas fa-book-open"></i>
                        <br>Learning
                    </a>
                    @* <a href="assignment.html" class="bg-orange icons-item">
                    <i class="fas fa-briefcase"></i>
                    <br>Assignments
                    </a> *@
                </div>
            </div>
        </div>

    </section>
    <!-- !Banner Section -->
    <!--  About Section-->
    <section id="about-section" class="py-4">
        <div class="container">
            <div class="title">Welcome</div>
            <p class="text-white"><span class="bg-orange px-2 py-1">to e-Administration of Computer Labs</span></p>
            <br>
            <p>The CLMS (e-Administration of computer) is an automated system for lab management. It eases the tasks of administrator, instructors, HOD’s of various departments, technical   staff   and students.</p>
            <p>Read more about the us <a href="about.html" class="orange">here.</a></p>
        </div>
    </section>
    <!--  !About Section-->
    <!-- Lab Section -->
    <section id="lab-section" class="pt-3 pb-5">
        <div class="container">
            <h4>Our Labs</h4>
            <hr>

           
                <div class="owl-carousel owl-theme">
                     @foreach( var item in Model.Labs)
            {
                    <div class="item px-3">
                        <img src="~/img/lab.jpg" alt="lab1">
                        <div class="text-paragraph py-2">
                            <h6>  @Html.DisplayFor(modelItem => item.Name)</h6>
                            <p><span class="orange">Location : </span> <span>@Html.DisplayFor(modelItem => item.Location)</span></p>
                            <p><span class="orange">Students Allowed : </span> <span>@Html.DisplayFor(modelItem => item.Capacity)</span></p>
                            <br>
                            <a asp-controller="Home" asp-action="DetailLab" asp-route-id="@item.ID" class="btn">View Details &nbsp; <i class="fas fa-long-arrow-alt-right"></i></a>
                        </div>
                    </div>
                }
            </div>
            <!-- Owl Carousel Slider -->
            <!-- !Owl Carousel Slider -->

        </div>
    </section>
    <!-- !Lab Section -->
    <!-- Course Section -->
    <section id="course-section" class="py-5 bg-orange text-white">
        <div class="container">
            <h4 class="text-center mb-4">E-Learning Resources</h4>

            <!-- Owl Carousel Slider -->
            <div class="owl-carousel owl-theme">
                @foreach (var elearning in Model.Elearnings)
                {
                    <div class="item px-3">
                        <div class="card h-100 shadow border-0 d-flex flex-column">
                            <!-- Display Image from Link -->
                            @if (!string.IsNullOrEmpty(elearning.Link))
                            {
                                <img src="@elearning.Link" alt="@elearning.Title" class="card-img-top" style="max-height: 200px; object-fit: cover;">
                            }
                            else
                            {
                                <img src="~/img/default-placeholder.png" alt="Default Image" class="card-img-top" style="max-height: 200px; object-fit: cover;">
                            }

                            <div class="card-body d-flex flex-column">
                                <!-- Display Title -->
                                <h5 class="card-title text-primary">@elearning.Title</h5>

                                <!-- Display Description -->
                                <p class="card-text text-muted text-truncate" style="max-height: 80px;">
                                    @if (!string.IsNullOrEmpty(elearning.Description))
                                    {
                                        var shortDescription = elearning.Description.Length > 80
                                        ? elearning.Description.Substring(0, 80) + "..."
                                        : elearning.Description;
                                        @shortDescription
                                    }
                                    else
                                    {
                                        <span class="text-muted">No description available</span>
                                    }
                                </p>
                            </div>

                            <div class="card-footer bg-white border-0 mt-auto">
                                <div class="d-flex justify-content-between align-items-center">
                                    @if (!string.IsNullOrEmpty(elearning.FilePath))
                                    {
                                        <a href="@elearning.FilePath" download class="btn btn-sm btn-primary">
                                            <i class="fas fa-download"></i> Download PDF
                                        </a>
                                    }
                                    else
                                    {
                                        <span class="text-danger small">No PDF available</span>
                                    }

                                    <a href="@Url.Action("Details", "ELearning", new { id = elearning.ID })" class="btn btn-sm btn-secondary">
                                        <i class="fas fa-info-circle"></i> View Details
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>
            <!-- !Owl Carousel Slider -->
        </div>
    </section>
    <!-- !Course Section -->
    <!-- Complain Section -->
    <section id="complain-section">
        <div class="container">
            <h3>Do you have any Complains ?</h3>
            <p>Getting involved with support to improve our standards for better experience!</p>
            <a href="complaint.html" class="btn rounded-pill px-4">Complain Now</a>
        </div>
    </section>
    <!-- !Complain Section -->
    <!-- Instructor Section -->
    <section id="instructor-section" class="py-5 ">
        <div class="container">
            <h4>Our Instructors</h4>

            <!-- Owl Carousel Slider -->
            <div class="owl-carousel owl-theme">
                <div class="item px-3">
                    <img src="~/img/" alt="lab1">
                    <div class="text-paragraph py-2">
                        <h6 class="text-center">Sir Ali</h6>
                    </div>
                </div>
                <div class="item px-3">
                    <img src="~/img/" alt="lab1">
                    <div class="text-paragraph py-2">
                        <h6 class="text-center">Miss Alina</h6>
                    </div>
                </div>
            </div>
            <!-- !Owl Carousel Slider -->

        </div>
    </section>
    <!-- !Instructor Section -->

</main>
