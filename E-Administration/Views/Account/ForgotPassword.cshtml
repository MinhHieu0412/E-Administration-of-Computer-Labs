@model E_Administration.Dto.ForgotPasswordModel

@{
    ViewData["Title"] = "ForgotPassword";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<main id="forgot-password-main-content">
    <!-- About Section -->
    <section id="about-section" class="py-4">
        <div class="container">
            <div class="title">Forgot Password</div>
            <p class="text-white"><span class="bg-orange">&nbsp; Reset your password &nbsp;</span></p>
        </div>
    </section>
    <!-- !About Section -->
    <!-- Form Section -->
    <section id="form-section" class="pt-3 pb-5">
        <div class="container">
            <div class="row">
                <div class="col-md-5 mx-auto">
                    <h2 class="pb-4">Reset Password</h2>
                    <form asp-action="ForgotPassword">
                        <div class="form-group">
                            <label asp-for="Email">Email *</label>
                            <input asp-for="Email" type="email" class="form-control" id="inputEmail">
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>
                        <div class="form-group text-center py-3">
                            <button type="submit" class="btn bg-orange rounded-pill w-100">Send Reset Link</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </section>
    <!-- !Form Section -->
</main>

