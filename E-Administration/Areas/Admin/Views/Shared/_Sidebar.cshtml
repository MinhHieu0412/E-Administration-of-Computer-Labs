        <a class="sidebar-link" asp-controller="Assignment" asp-action="Index" asp-area="Admin">
            <i class="fas fa-briefcase"></i>Assignments
        </a>
        <a class="sidebar-link" asp-area="Admin" asp-controller="Repair" asp-action="Index">
