@model IEnumerable<E_Administration.Models.Elearnings>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="container mt-4">
    <div class="card shadow-sm">
        <div class="card-header bg-info text-white text-center">
            <h3 class="mb-0">eLearning Resources Management</h3>
        </div>
        <div class="card-body">
            <div class="d-flex justify-content-between align-items-center mb-3">
                <h5 class="text-secondary">Available eLearning Resources</h5>
                <a asp-action="Create" class="btn btn-success">
                    <i class="fa fa-plus-circle"></i> Create New eLearning
                </a>
            </div>

            <div class="table-responsive">
                <table class="table table-bordered table-striped table-hover align-middle">
                    <thead class="table-dark text-center">
                        <tr>
                            <th>Uploaded By</th>
                            <th>Title</th>
                            <th>Description</th>
                            <th>PDF File</th>
                            <th>Image</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@(item.User?.UserName ?? "Unknown")</td>
                                <td>@item.Title</td>
                                <td>@item.Description</td>
                                <td class="text-center">
                                    <a href="@item.FilePath" target="_blank" class="btn btn-outline-info btn-sm">
                                        <i class="fa fa-file-pdf"></i> View PDF
                                    </a>
                                </td>
                                <td class="text-center">
                                    <img src="@item.Link" alt="Image" class="img-thumbnail" style="width: 100px; height: auto;" />
                                </td>
                                <td class="text-center">
                                    <div class="btn-group">
                                        <a asp-action="Edit" asp-route-id="@item.ID" class="btn btn-primary btn-sm">
                                            <i class="fa fa-edit"></i> Edit
                                        </a>
                                        <a asp-action="Delete" asp-route-id="@item.ID" class="btn btn-danger btn-sm">
                                            <i class="fa fa-trash"></i> Delete
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

