@model IEnumerable<E_Administration.Models.RepairAssignments>

<div class="container mt-4">
    <h2>Repair Assignments</h2>
    <a href="/Admin/RepairAssignment/Create" class="btn btn-primary mb-3">Create New Assignment</a>

    <table class="table table-striped table-bordered">
        <thead>
            <tr>
                <th>ID</th>
                <th>Issue Report</th>
                <th>Assigned User</th> <!-- Thay đổi -->
               @*  <th>Created At</th>
                <th>Updated At</th> *@
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @if (!Model.Any())
            {
                <tr>
                    <td colspan="6" class="text-center">No Repair Assignments found.</td>
                </tr>
            }
            else
            {
                foreach (var assignment in Model)
                {
                    <tr>
                        <td>@assignment.ID</td>
                        <td>
                            @assignment.IssueReportID
                            <a href="/Admin/Repair/Details/@assignment.IssueReportID" class="btn btn-link btn-sm">View Report</a>
                        </td>
                        <td>
                            @assignment.Technician.UserName <!-- Hiển thị tên User -->
                            <a href="/Admin/Users/Details/@assignment.TechnicianID" class="btn btn-link btn-sm">View User</a>
                        </td>
                      @*   <td>@(assignment.CreatedAt.HasValue ? assignment.CreatedAt.Value.ToString("g") : "N/A")</td>
                        <td>@(assignment.UpdatedAt.HasValue ? assignment.UpdatedAt.Value.ToString("g") : "N/A")</td> *@

                        <td>
                            <a href="/Admin/RepairAssignment/Details/@assignment.ID" class="btn btn-info btn-sm">Details</a>
                            @* <a href="/Admin/RepairAssignment/Edit/@assignment.ID" class="btn btn-warning btn-sm">Edit</a> *@
                            <form action="/Admin/RepairAssignment/Delete/@assignment.ID" method="post" style="display:inline;">
                                <button type="submit" class="btn btn-danger btn-sm">Delete</button>
                            </form>
                        </td>

                    </tr>
                }
            }
        </tbody>
    </table>
</div>
