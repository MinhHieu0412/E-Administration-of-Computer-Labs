@model E_Administration.Models.RepairAssignments
@{
    ViewData["Title"] = "Delete Repair Assignment";
}

<h1>Delete Repair Assignment</h1>

<p>Are you sure you want to delete this repair assignment?</p>

<div>
    <dl class="row">
        <dt class="col-sm-2">ID</dt>
        <dd class="col-sm-10">@Model.TechnicianID</dd>

        <dt class="col-sm-2">Technician</dt>
        <dd class="col-sm-10">@Model?.Technician?.UserName</dd>

        <dt class="col-sm-2">Details</dt>
        <dd class="col-sm-10">@Model?.Status</dd>
    </dl>
</div>

<form asp-action="Delete" method="post">
    <input type="hidden" asp-for="ID" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>
