
@model E_Administration.Models.HomeViewModel
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/User/Views/Shared/_Layout.cshtml";
}
<main id="main-content">

    <!-- Banner Section -->
    <section id="banner-section">

        <!-- Owl Carousel Slider -->
        <div class="owl-carousel owl-theme">
            <div class="item">
                <img src="~/img/banner-1.jpg" alt="banner1">
            </div>
            <div class="item">
                <img src="~/img/banner-2.jpg" alt="banner2">
            </div>
            <div class="item">
                <img src="~/img/banner-3.jpg" alt="banner3">
            </div>
        </div>
        <!-- !Owl Carousel Slider -->

        <div class="slider-caption">
            <div class="container">
                <div class="caption-icons">
                    <a href="labs.html" class="bg-orange icons-item">
                        <i class="fas fa-desktop"></i>
                        <br>Labs
                    </a>
                    <a href="complaint.html" class="bg-yellow icons-item">
                        <i class="fas fa-lightbulb"></i>
                        <br>Complains
                    </a>
                    <a asp-action="Index" asp-controller="ELearning" asp-area="user" class="bg-yellow icons-item">
                        <i class="fas fa-book-open"></i>
                        <br>Learning
                    </a>
                    <a asp-area="User" asp-controller="Assignment" asp-action="Index" class="bg-orange icons-item">
                        <i class="fas fa-briefcase"></i>
                        <br>Assignments
                    </a>
                </div>
            </div>
        </div>

    </section>
    <!-- !Banner Section -->
    <!--  About Section-->
    <section id="about-section" class="py-4">
        <div class="container">
            <div class="title">Welcome</div>
            <p class="text-white"><span class="bg-orange px-2 py-1">to e-Administration of Computer Labs</span></p>
            <br>
            <p>The CLMS (e-Administration of computer) is an automated system for lab management. It eases the tasks of administrator, instructors, HOD’s of various departments, technical   staff   and students.</p>
            <p>Read more about the us <a href="about.html" class="orange">here.</a></p>
        </div>
    </section>
    <!--  !About Section-->
    <!-- Lab Section -->
    <section id="lab-section" class="pt-3 pb-5">
        <div class="container">
            <h4>Our Labs</h4>
            <hr>

            <!-- Owl Carousel Slider -->
            <div class="owl-carousel owl-theme">
                @foreach( var lab in Model.Labs)
            {
                    <div class="item px-3">
                        <img src="~/img/lab.jpg" alt="lab1">
                        <div class="text-paragraph py-2">
                            <h6>  @Html.DisplayFor(modelItem => lab.Name)</h6>
                            <p><span class="orange">Location : </span> <span>@Html.DisplayFor(modelItem => lab.Location)</span></p>
                            <p><span class="orange">Students Allowed : </span> <span>@Html.DisplayFor(modelItem => lab.Capacity)</span></p>
                            <br>
                            <a asp-controller="PageUser" asp-action="DetailLab" asp-route-id="@lab.ID" class="btn">View Details &nbsp; <i class="fas fa-long-arrow-alt-right"></i></a>
                        </div>
                    </div>
            }
            </div>
            <!-- !Owl Carousel Slider -->

        </div>
    </section>
    <!-- !Lab Section -->
    <!-- Course Section -->
    <section id="course-section" class="py-5 bg-orange text-white">
        <div class="container">
            <h4> E - Learning</h4>

            <!-- Owl Carousel Slider -->
            <div class="owl-carousel owl-theme">
                @foreach (var elearning in Model.Elearnings)
                {
                        <div class="item px-3">
                            <!-- Hiển thị hình ảnh từ Link -->
                        @if (!string.IsNullOrEmpty(elearning.Link))
                        {
                                    <img src="@elearning.Link" alt="@elearning.Title" style="max-width: 100%; height: auto;">
                        }
                        else
                        {
                                    <img src="~/img/default-placeholder.png" alt="Default Image" style="max-width: 100%; height: auto;">
                        }

                            <div class="text-paragraph py-2 text-center">
                                <!-- Hiển thị tiêu đề -->
                                <h5>@elearning.Title</h5>

                                <!-- Hiển thị mô tả -->
                            <p>
                                @if (!string.IsNullOrEmpty(elearning.Description))
                                {
                                    var shortDescription = elearning.Description.Length > 100
                                    ? elearning.Description.Substring(0, 100) + "..."
                                    : elearning.Description;
                                    @shortDescription
                                }
                                else
                                {
                                    <span class="text-muted">No description available</span>
                                }
                            </p>

                                <!-- Nút tải PDF -->
                            @if (!string.IsNullOrEmpty(elearning.FilePath))
                            {
                                        <a href="@elearning.FilePath" download class="btn btn-primary">
                                            Download PDF &nbsp; <i class="fas fa-download"></i>
                                        </a>
                            }
                            else
                            {
                                        <p class="text-danger">PDF file not available</p>
                            }

                                
                            </div>
                        </div>
                }
            </div>
            <!-- !Owl Carousel Slider -->
        </div>
    </section>
    <!-- !Course Section -->
    <!-- Complain Section -->
    <section id="complain-section">
        <div class="container">
            <h3>Do you have any Complains ?</h3>
            <p>Getting involved with support to improve our standards for better experience!</p>
            <a href="complaint.html" class="btn rounded-pill px-4">Complain Now</a>
        </div>
    </section>
<!-- !Complain Section -->
    <!-- Instructor Section -->
    <section id="instructor-section" class="py-5 ">
        <div class="container">
            <h4>Our Instructors</h4>

            <!-- Owl Carousel Slider -->
            <div class="owl-carousel owl-theme">
                <div class="item px-3">
                    <img src="~/img/instructor/instructor1.jpg" alt="lab1">
                    <div class="text-paragraph py-2">
                        <h6 class="text-center">Sir Ali</h6>
                    </div>
                </div>
                <div class="item px-3">
                    <img src="~/img/instructor/instructor2.jpg" alt="lab1">
                    <div class="text-paragraph py-2">
                        <h6 class="text-center">Miss Alina</h6>
                    </div>
                </div>
            </div>
            <!-- !Owl Carousel Slider -->

        </div>
    </section>
    <!-- !Instructor Section -->

</main>
