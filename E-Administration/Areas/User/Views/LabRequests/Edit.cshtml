@model E_Administration.Dto.LabRequestDto

@{
    ViewData["Title"] = "Edit Lab Request";
    Layout = "~/Areas/User/Views/Shared/_Layout.cshtml";
}

<div class="container mt-5">
    <div class="card shadow-lg">
        <div class="card-header bg-primary text-white text-center">
            <h3>Edit Lab Request</h3>
        </div>
        <div class="card-body">
            <form asp-action="Edit" asp-controller="LabRequests" method="post">
                @* Hidden fields to retain other properties *@
                <input type="hidden" asp-for="ID" />
                <input type="hidden" asp-for="DepartmentID" />
                <input type="hidden" asp-for="RequestedByID" />
                <input type="hidden" asp-for="AdminResponse" />
                <input type="hidden" asp-for="Status" />
                <input type="hidden" asp-for="CreatedAt" />
                <input type="hidden" asp-for="UpdatedAt" />

                <div class="form-group">
                    <label asp-for="Purpose" class="form-label">Purpose</label>
                    <textarea asp-for="Purpose" class="form-control" rows="3"></textarea>
                    <span asp-validation-for="Purpose" class="text-danger"></span>
                </div>

                <div class="text-center">
                    <button type="submit" class="btn btn-success">Save Changes</button>
                    <a asp-action="MyRequests" asp-controller="LabRequests" class="btn btn-secondary">Cancel</a>
                </div>
            </form>
        </div>
    </div>
</div>
