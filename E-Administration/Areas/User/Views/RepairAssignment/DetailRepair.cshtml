@model E_Administration.Models.IssueReports

@{
    ViewData["Title"] = "Repair - Report Details";
    Layout = "~/Areas/User/Views/Shared/_Layout.cshtml";
}

<main id="main-content">
    <section class="py-5">
        <div class="container">
            <h3>Issue Report Details</h3>
            <div class="card">
                <div class="card-body">
                    <p><strong>Report ID:</strong> @Model.ID</p>
                    <p><strong>Lab:</strong> @Model.Lab?.Name (@Model.LabID)</p>
                    <p><strong>Department:</strong> @Model.Department?.Name (@Model.DepartmentID)</p>
                    <p><strong>Reporter:</strong> @Model.Reporter?.UserName (@Model.ReporterID)</p>
                    <p><strong>Description:</strong> @Model.Description</p>
                    <p><strong>Số Máy:</strong> @Model.Equipments?.LabID</p>
                    <p><strong>Tên Máy:</strong> @Model.Equipments?.Name</p>


                    <p><strong>Status:</strong> @Model.Status</p>
                    <p><strong>Created At:</strong> @Model.CreatedAt?.ToString("yyyy-MM-dd HH:mm")</p>
                    <p><strong>Updated At:</strong> @Model.UpdatedAt?.ToString("yyyy-MM-dd HH:mm")</p>
                </div>
            </div>
            <!-- Approve Button -->
         @*    <form method="post" asp-area="Admin" asp-controller="Repair" asp-action="ApprovePage" asp-route-id="@Model.ID" class="d-inline">
                <button type="submit" class="btn btn-success">Approve</button>
            </form> *@


            <div class="mt-3">
                <a asp-area="User"
                   asp-controller="RepairAssignment"
                   asp-action="Index"
                   class="btn btn-secondary">
                    Back to Repair Assignments
                </a>
            </div>


        </div>
    </section>
</main>
