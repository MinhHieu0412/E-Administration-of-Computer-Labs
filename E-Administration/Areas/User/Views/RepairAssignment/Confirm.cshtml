@model E_Administration.Models.RepairAssignments

@{
    ViewData["Title"] = "Confirm Assignment";
}

<div class="container mt-4">
    <h1>Confirm Repair Assignment</h1>
    <p>Are you sure you want to confirm this repair assignment?</p>

    <div class="card">
        <div class="card-body">
            <p><strong>Assignment ID:</strong> @Model.ID</p>
            <p><strong>Issue Description:</strong> @Model.IssueReports?.Description</p>
            <p><strong>Assigned Technician:</strong> @Model.Technician?.UserName</p>
        </div>
    </div>

    <form method="post" asp-action="Confirm" asp-route-id="@Model.ID" class="mt-3">
        <button type="submit" class="btn btn-success">Confirm</button>
        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
    </form>
</div>
