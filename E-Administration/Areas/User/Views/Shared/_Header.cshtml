<header class="" id="header">
    <div class="alert alert-warning bg-orange alert-dismissible fade show notification" role="alert">
        <strong>Important!</strong> You should check in on some of those fields below.
        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
            <span aria-hidden="true">&times;</span>
        </button>
    </div>

    <div class="header-menu bg-dark px-5">
        <nav class="navbar navbar-expand-lg text-white ">
            <a class="navbar-brand" href="index.html"><img src="assests/img/logo-light.png" alt="" width="35"></a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbar-Nav" aria-controls="navbar-Nav" aria-expanded="false" aria-label="Toggle navigation">
                <i class="fas fa-bars"></i>
            </button>
            <div class="collapse navbar-collapse" id="navbar-Nav">
                <ul class="navbar-nav m-auto">
                    <li class="nav-item active">
                        <a class="nav-link" asp-action="Index" asp-controller="PageUser" asp-area="user">Home</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-area="User" asp-controller="AboutUs" asp-action="index">AboutUs</a>
                    </li>
                   
                    <li class="nav-item">
                        <a class="nav-link" asp-area="User" asp-controller="Contact" asp-action="index">Contact</a>
                    </li>
                    
                    @if (User.IsInRole("Lecturer"))
                    {
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="LeaveRequest" asp-action="Index">Leave Requests</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="MakeUpRequest" asp-action="Index">MakeUpRequest</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-action="Index" asp-controller="ELearning" asp-area="User">E Learning</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-action="Report" asp-controller="Report" asp-area="User">Report</a>
                        </li>
                    }
                    else if (User.IsInRole("Technician"))
                    {



                        <li class="nav-item">
                            <a class="nav-link" asp-action="Index" asp-controller="RepairAssignment" asp-area="Admin">Repair Assignment</a>
                        </li>

                    }
                    else if (User.IsInRole("HOD"))
                    {
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="LabRequests" asp-action="MyRequests" asp-area="User">Lab Requests</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="ViewReport" asp-action="Index" asp-area="User">IssueReports</a>
                        </li>
                    }
                    @* @if (User.Identity.IsAuthenticated)
                    {
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Account" asp-action="Logout">Logout</a>
                        </li>
                    }
                    else
                    {
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Account" asp-action="Login">Login</a>
                        </li>
                    } *@
                </ul>
                <div class="dropdown">
                    <a class="user-nav-show" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                        @if (User.Identity.IsAuthenticated)
                        {
                            <span>Welcome, @User.FindFirst("UserName")?.Value</span>
                        }
                       
                        <img src="@User.FindFirst("UserImage")?.Value" class="rounded-pill">
                    </a>
                    <div class="dropdown-menu" aria-labelledby="navbarDropdown">
                        <a class="dropdown-item" asp-action="Details" asp-controller="Profile" asp-area="User"><i class="fas fa-cog"></i>Edit Profile</a>
                        <div class="dropdown-divider"></div>
                        <a class="dropdown-item" asp-area="" asp-controller="Account" asp-action="Logout"><i class="fas fa-sign-out-alt"></i>Logout</a>
                    </div>
                </div>
            </div>
        </nav>
    </div>
</header>