@model E_Administration.Models.LeaveRequest
@{
    ViewData["Title"] = "Create";
    Layout = "~/Areas/User/Views/Shared/_Layout.cshtml";
}
<h2>Tạo đơn xin nghỉ</h2>
<form asp-action="Create">
    <div class="form-group">
        <label for="UserId">Người dùng</label>
        <select asp-for="UserId" asp-items="ViewBag.Users" class="form-control">
            <option value="">-- Chọn người dùng --</option>
        </select>
    </div>
    <div class="form-group">
        <label for="StartDate">Ngày bắt đầu nghỉ</label>
        <input asp-for="StartDate" class="form-control" type="date" />
    </div>
    <div class="form-group">
        <label for="EndDate">Ngày kết thúc nghỉ</label>
        <input asp-for="EndDate" class="form-control" type="date" />
    </div>
    <div class="form-group">
        <label for="Reason">Lý do</label>
        <textarea asp-for="Reason" class="form-control"></textarea>
    </div>
    <button type="submit" class="btn btn-success">Gửi đơn</button>
</form>


