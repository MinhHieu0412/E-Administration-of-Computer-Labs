@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/User/Views/Shared/_Layout.cshtml";
}
<h2>Make-Up Request List</h2>

<a href="@Url.Action("Create", "MakeUpRequest", new { area = "User" })" class="btn btn-primary mb-3">
    Register for Make-Up Class
</a>

<table class="table">
    <thead>
        <tr>
            <th>User</th>
            <th>Leave Start Date</th>
            <th>Leave End Date</th>
            <th>Make-Up Room</th>
            <th>Make-Up Date</th>
            <th>Make-Up Time</th>
            <th>Status</th>
            <th>Feedback</th>
        </tr>
    </thead>
    <tbody>
        @if (ViewBag.MakeUpRequests != null)
        {
            @foreach (var request in ViewBag.MakeUpRequests)
            {
                <tr>
                    <td>@request.UserName</td>
                    <td>@request.LeaveRequestStartDate.ToShortDateString()</td>
                    <td>@request.LeaveRequestEndDate.ToShortDateString()</td>
                    <td>@request.LabName</td>
                    <td>@request.MakeUpDate.ToShortDateString()</td>
                    <td>@request.MakeUpTime</td>
                    <td>
                        @if (request.IsApproved)
                        {
                            <span class="text-success fw-bold">Approved</span>
                        }
                        else
                        {
                            <span class="text-danger fw-bold">Not Approved</span>
                        }
                    </td>
                    <td>@(request.Feedback ?? "No Feedback")</td>
                </tr>
            }
        }
        else
        {
            <tr>
                <td colspan="8" class="text-center">No Data Available</td>
            </tr>
        }
    </tbody>
</table>
