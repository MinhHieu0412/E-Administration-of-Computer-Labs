@model E_Administration.Models.IssueReports

@{
    ViewData["Title"] = "Submission Result";
    Layout = "~/Areas/User/Views/Shared/_Layout.cshtml";
}

<main id="main-content">
    <section class="py-5">
        <div class="container">
            <h3>Report Submission</h3>

            @if (TempData["SuccessMessage"] != null)
            {
                <div class="alert alert-success" role="alert">
                    @TempData["SuccessMessage"]
                </div>
            }

            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">Report ID: @Model.ID</h5>
                    <p><strong>LabID:</strong> @Model.LabID</p>
                    <p><strong>EquipmentID:</strong> @Model.EquipmentID</p>
                    <p><strong>Description:</strong> @Model.Description</p>
                    <p><strong>Status:</strong> @Model.Status</p>
                    <p><strong>Created At:</strong> @Model.CreatedAt?.ToString("yyyy-MM-dd HH:mm:ss")</p>
                    <p><strong>Updated At:</strong> @Model.UpdatedAt?.ToString("yyyy-MM-dd HH:mm:ss")</p>
                </div>
            </div>

            <div class="mt-3">
                <!-- Quay lại màn hình Home -->
                <a asp-area=""
                   asp-controller="Home"
                   asp-action="Index"
                   class="btn btn-secondary">
                    Back to Home
                </a>
            </div>
        </div>
    </section>
</main>
